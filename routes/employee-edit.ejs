<!DOCTYPE html>
<html>
    <head>
        <title>Employee Management</title>
        <link href="node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
        <link href="style.css" rel="stylesheet">
      
    </head>
    <body>
       <div class="home-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Employee Management</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/employee-edit">Edit Details <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/leave-approval">Leave Approval</a>
                <a class="nav-item nav-link" href="/review-details">Reviews</a>
              </div>
              <span class="navbar-text">
                <button type="button" class="btn btn-danger" onclick="location.href='/admin'">Log Out</button>
              </span>
            </div>
          </nav>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Start Date</th>
                <th scope="col">Job Title</th>
                <th scope="col">Type</th>
                <th scope="col">City</th>
                <th scope="col">Designation</th>
                <th scope="col">Team</th>
                <th scope="col">Manager</th>
                <th scope="col">Salary</th>
                <th scope="col">Salary Date</th>
                <th scope="col">Tools</th>
              </tr>
            </thead>
            <tbody>
             <% employee.forEach(function(x) {%>
               
              
              <tr>
                <td><%= x.fname %> <%= x.lname  %> </td>
                <td><%= x.start_date%></td>
                <td><%= x.job_title %></td>
                <td><%=x.type%></td>
                <td><%=x.city%></td>
                <td><%= x.designation  %> </td>
                <td><%= x.team %> </td>
                <td><%= x.manager %> </td>
                <td><%=x.salary%></td>
                <td><%= x.salary_date  %> </td>
                <td>
                    
                    <button type="button" class="btn btn-success" name="edit"onclick="location.href='/employee-update/'+<%= x.uid %> ">Edit</button>
                    
                </td>
              </tr>
            <%});%>
            </tbody>
          </table>
       </div>
              
    </body>
   
</html>